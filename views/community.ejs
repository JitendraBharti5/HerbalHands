function shareOnWhatsApp(id) {
  var message = encodeURIComponent(`localhost:3000/community/${id}`); // Encode the message
  var whatsappUrl = "https://api.whatsapp.com/send?text=" + message;
  window.open(whatsappUrl, "_blank");
}
                
</script>

</html>
